<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- decoration-success=green
        decoration-warning=yellow
        decoration-info=light blue
        decoration-danger=red
        decorated muted=non-color -->


     <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search >
             
            </search>
        </field>
    </record>




    <record id="view_hospital_appointment_tree" model="ir.ui.view">
    <field name="name">hospital.appointment.tree</field>
    <field name="model">hospital.appointment</field>
    <field name="type">list</field>
    <field name="arch" type="xml">
        <list decoration-success="state=='done'" decoration-info="state == 'draft'"
                         decoration-danger="state=='cancel'"
                         decoration-warning="state =='in_consultation'"
                         multi_edit="1" >

                        <field name="patient_id" />
                        <field name="gender" />

                         <field name="ref"  optional="show" />
                         <field name="doctor_id" widget="many2one_avatar_user"/>
                        <field name="appointment_time" optional="hide" />
                        <field name="booking_date" optional="hide" />

                        <field name="activity_ids" widget="list_activity" />

                        <field name="state" decoration-success="state=='done'"
                         decoration-info="state == 'draft'"
                         decoration-danger="state=='cancel'"
                         decoration-warning="state =='in_consultation'"
                         widget='badge' />
        
        </list>
    </field>
    </record>







    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
         <field name="arch" type="xml">
            <form>


            <header>
            <!-- options="{'clickable':'1'}" -->
            <button name="action_in_consultation" type="object" string="In-Consultation" class="btn-primary"
             invisible="state != 'draft'"/>

            <button name="action_done" type="object" string="Mark As Done" class="btn-primary"
               invisible="state != 'in_consultation'"/>

            <button name="action_cancel" type="object" string="Cancel" class="btn-primary"
              invisible="state not in ('draft', 'in_consultation')"/>

          <button name="action_draft" type="object" string="Reset To Draft" class="btn-primary"
             invisible="state not in ('cancel', 'done')"/>

            <field name="state" widget="statusbar" nolabel="1" 
            statusbar_visible="draft,in_consultation,done" />
            </header>


                <sheet>
                <div class="oe_title">
                <h1>
                <field name="priority" widget="priority" class="mr-3" />
                </h1>
                </div>


                    <group>
                            <group >
                        <field name="patient_id" default_focus="1" />
                        <field name="ref" />
                        <field name="gender" />
                        <field name="doctor_id" widget="many2one_avatar"/>
                        <field name="booking_date" />
                             </group>

                             <group >
                         <field name="appointment_time" />
                         <button name="action_test" type="object" 
                         help="A message will be printed in log"
                         confirm="Are you sure to execute the python code?(action_test function)"
                         string="Object Button" class="btn-primary" />
                        
                        
                        
                         <button name="%(om_hospital.action_hospital_patient)d" type="action" 
                         help="On clicking this Button, you will be redirected to patients records"
                         confirm="Are You sure open the patient action?"
                         string="Action Button" class="btn-primary" />

                             </group>
                    </group>

                    <notebook>
                        <page name="prescription" string="Prescription">
                           <field name="prescription" placeholder="Enter your Presciption" 
                           options="{'resizable':true}"/>
                        </page>
                         <page name="pharmacy" string="Pharmacy">
                           <field name="Pharmacy_line_ids" >
                           <!-- add <<editable="bottom" "Top">>not genrate the popup -->
                                     <list>
                                              <field name="product_id" />
                                             <field name="price_unit" />
                                             <field name="qty" />
                                    </list>
                                    <form>
                                          <group>
                                                  <field name="product_id" />
                                                  <field name="price_unit" />
                                                  <field name="qty" />
                                          </group>
                                  </form>
                            </field>  
                        </page>
                    </notebook>


                </sheet>
              <div class="oe_chatter">
                        <chatter/>
                    </div>
            </form>
        </field>
    </record>





    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field> <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first Appointment!</p>
        </field>
    </record>

    <menuitem id="menu_appointment"
              name="Appointments"
              action="action_hospital_appointment"
              parent="menu_appointment_master"
              sequence="10"/>

</odoo>